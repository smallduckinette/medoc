CXXFLAGS += $(shell wx-config --cxxflags) $(shell sane-config --cflags) $(shell Magick++-config --cppflags)

LDFLAGS += $(shell wx-config --libs) $(shell sane-config --ldflags) $(shell sane-config --libs) $(shell Magick++-config --ldflags) $(shell Magick++-config --libs) -lpqxx

FILES[] =
	$(removesuffix $(glob *.cpp))

CXXProgram(../bin/medoc, $(FILES))

.DEFAULT: ../bin/medoc$(EXE)
