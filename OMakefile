CXXFLAGS += -Wall -Werror -ansi $(shell wx-config --cxxflags) $(shell sane-config --cflags) -std=gnu++0x -ggdb -I.. 

SRC_TREE[] =
	$(removeprefix $(absname src), $(subdirs src))

foreach(d, $(SRC_TREE))
	vmount(-fl, $(absname src/$(d)), $(absname debug/$(d)))

.SUBDIRS: debug

.PHONY: clean
clean:
	rm $(filter-proper-targets $(ls R, .))
